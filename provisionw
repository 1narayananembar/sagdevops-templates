#!/bin/sh

TEMPLATE_ALIAS=$1
DIRNAME=`dirname $0`

export COMPOSE_FILE=$DIRNAME/docker-compose.yml

docker-compose up -d builder

echo ""
echo "=================================="
echo "Command Central Web UI: https://`docker-compose -f $DIRNAME/docker-compose.yml port builder 8091`"
echo "=================================="
echo ""

