// curl -X POST -F "jenkinsfile=<Jenkinsfile.staging" http://ccbvtauto.eur.ad.sag:8080/pipeline-model-converter/validate

pipeline {
    agent { label 'docker-swarm' }
    parameters {
        choice(choices: '10.3-si\n10.3\n10.2\n10.1', description: 'Tag to launch', name: 'tag')
    }
    stages {
        stage('Deploy') {
            environment {
                TAG = "${params.tag}"
            }
            steps {
                dir ('deployments/docker') {
                    sh 'docker-compose -f sag-cc/docker-compose.yml up -d'
                    sh 'docker-compose -f prometheus/docker-compose.yml up -d'
                    sh 'docker-compose -f sag-um-is/docker-compose.yml up -d'
            }
        }
    }
}
